
  <div id="follow_form">
    <% if current_user.is_already_followed?(@user) %>
      <%= link_to 'Unfollow', following_path(@user.id), method: :delete ,class:"btn btn-default btn-sm"%>
    <% else %>
      <%= link_to 'Follow', followings_path(@user.id), method: :post ,class:"btn btn-primary btn-sm"%>
    <% end %>
  </div>
