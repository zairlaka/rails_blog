<% content_for :page_title, "Categories" %>
<br>

<div class="container">
  <%= link_to 'Back', :root,class: 'btn btn-default border-main' %>
  <br /><br />
  <table class="table table-hover">
    <thead class="mcolor">
    <tr>
      <th>Name</th>
      <th colspan="3">Actions</th>
    </tr>
  </thead>

  <tbody>
    <% @categories.each do |category| %>
      <tr>
        <td><%= category.name %></td>
        <td><%# link_to 'Show', category , class:"btn btn-primary btn-sm"%></td>
        <td><%= link_to 'Edit', edit_category_path(category), class:"btn btn-info btn-sm" %></td>
        <td><%= link_to 'Destroy', category, method: :delete, data: { confirm: 'Are you sure?' }, class:"btn btn-danger btn-sm" %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Category', new_category_path,class: 'btn btn-default border-main' %>