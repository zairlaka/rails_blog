<% content_for :page_title, "Tags" %>
<br>

<div class="container">
  <%= link_to 'Back', dash_path,class: 'btn btn-default border-main' %>
  <br /><br />
  <table class="table table-hover">
    <thead class="mcolor">
    <tr>
      <th>Name</th>
      <th colspan="3">Actions</th>
    </tr>
    </thead>

    <tbody>
    <% @tags.each do |tag| %>
      <tr>
        <td><%= tag.name %></td>

        <td><%= link_to 'Edit', edit_tag_path(tag), class:"btn btn-info btn-sm" %></td>
        <td><%= link_to 'Destroy', tag, method: :delete, data: { confirm: 'Are you sure?' }, class:"btn btn-danger btn-sm" %></td>
      </tr>
    <% end %>
    </tbody>
  </table>

  <br>

<%= link_to 'New Tag', new_tag_path,class: 'btn btn-default border-main' %>