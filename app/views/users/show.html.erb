
<% content_for :page_title, "#{ @user.username }" %>

<table class="table table-hover" style="boder: 2px solid red">
  <thead class="mcolor">
  <tr>
    <th colspan="2">Profile</th>
    <th colspan="2">Details</th>
  </tr>
  </thead>
  <tbody>

    <tr>
      <td rowspan="7"><%= image_tag("user.png", size: "300x300",:alt => "User pic") %></td>
    </tr>
    <tr>
      <td><strong>ID : </strong></td>
      <td><strong><%= @user.id %></strong></td>
    </tr>
    <tr>
      <td><strong>User Name : </strong></td>
      <td><strong><%= @user.username %></strong></td>
    </tr>
    <tr>
      <td><strong>User Email : </strong></td>
      <td><strong><%= @user.email %></strong></td>
    </tr>
    <tr>
      <td><strong>Admin :</strong></td>
      <td><strong><%= @user.isadmin %></strong></td>
    </tr>
    <tr>
      <td><strong>Created At :</strong></td>
      <td><strong><%= @user.created_at %></strong></td>
    </tr>
    <tr>
      <td>
        <a href="<%# following_user_path(@user) %>#">
          <strong id="following" class="stat">
            <%= pluralize(@user.followings.count, 'Following') %>
          </strong>
        </a>
      </td>
      <td>
        <a href="#<%# followers_user_path(@user) %>">
          <strong id="follower" class="stat">
            <%= pluralize(@user.followers.count, 'Follower') %>
          </strong>
        </a>
      </td>
    </tr>
    <tr>
    <td>
      <%= link_to 'Back', :root,class: 'btn btn-default btn-sm border-main' %>
    </td>
      <td> <%= render 'follow_form' %></td>
    <td>
      <%= link_to "Edit", edit_user_registration_path() ,class: 'btn btn-warning btn-sm'  %>
    </td>
    </tr>
  </tbody>
</table>